<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dishcovery.mapper.CommentMapper">

    <!-- 댓글 작성 -->
    <insert id="insertComment">
        INSERT INTO comment (
            board_id,
            content,
            writer,
            created_at
        ) VALUES (
                     #{boardId},
                     #{content},
                     #{writer},
                     NOW()
                 )
    </insert>

    <!-- 특정 게시글의 댓글 목록 조회 -->
    <select id="selectCommentsByBoardId"
            resultType="com.spring.dishcovery.entity.CommentEntity">
        SELECT
            comment_id,
            board_id,
            content,
            writer,
            created_at
        FROM comment
        WHERE board_id = #{boardId}
        ORDER BY comment_id ASC
    </select>

    <!-- 댓글 개수 조회 -->
    <select id="countCommentsByBoardId"
            resultType="int">
        SELECT COUNT(*)
        FROM comment
        WHERE board_id = #{boardId}
    </select>

    <!-- 댓글 삭제 -->
    <delete id="deleteComment">
        DELETE FROM comment
        WHERE comment_id = #{commentId}
    </delete>

    <!-- 게시글 삭제 시 모든 댓글 삭제 -->
    <delete id="deleteCommentsByBoardId">
        DELETE FROM comment
        WHERE board_id = #{boardId}
    </delete>

</mapper>